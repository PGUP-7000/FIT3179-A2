{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PGUP-7000/FIT3179-A2/main/fire_archive_M6_96619.csv"
  },
  "width": 600,
  "height": 400,
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "timeUnit": "monthdate",
      "field": "acq_date",
      "title": "Month of the year"
    },
    "y": {"field": "admin1", "type": "nominal", "axis": {"title": ""}},
    "size": {
      "field": "frp",
      "type": "quantitative",
      "title": "FRP",
      "legend": {"clipHeight": 50},
      "scale": {"rangeMax": 3000}
    },
    "color": {"field": "admin1", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "admin1", "title": "State"},
      {"field": "frp", "title": "FRP"}
    ]
  },
  "config": {}
}
