{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PGUP-7000/FIT3179-A2/main/fire_archive_M6_96619.csv"
  },
  "title":"FRP of each fire in each state(Aug 2019 - Sep 2019)",
  "width": "container",
  "height": 400,
  "params": [
    {
      "name": "frp_filter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3600,
        "step": 100,
        "name": "FRP:"
        
      }
    }
  ],
  "transform": [
    {"filter": "datum.frp > frp_filter"}
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "timeUnit": "monthdate",
      "field": "acq_date",
      "title": "Month of the year"
    },
    "y": {"field": "admin1", "type": "nominal", "axis": {"title": ""}},
    "size": {
      "field": "frp",
      "type": "quantitative",
      "title": "FRP",
      "scale": {
            "type": "threshold",
            "domain": [100, 250, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250,2500,2750,3000,3700],
            "range": [5, 100, 250, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250,2500,2750,3000,3700,4000]
          },
      "legend": null
    },
    "color":  {"field":"admin1", "type": "nominal","scale":{"domain": [
              "Australian Capital Territory",
              "New South Wales",
              "Northern Territory",
              "Queensland",
              "South Australia",
              "Tasmania",
              "Victoria",
              "Western Australia"
            ],"range": [
              "#4e79a7",
              "#e49444",
              "#d1615d",
              "#85b6b2",
              "#6a9f58",
              "#e7ca60",
              "#a87c9f",
              "#f1a2a9"
            ]}},
    
    
    "tooltip": [
      {"field": "admin1", "title": "State"},
      {"field": "frp", "title": "FRP"}
    ]
  },
  "config": {}
}
